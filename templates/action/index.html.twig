{% extends 'admin/base.html.twig' %}

{% block title %}Action index
{% endblock %}

{% block body %}
	<section class="container col-auto col-md-9 col-xl-10">
		<h1>Action index</h1>
		<div class="d-flex flex-row-reverse">
			<a class="btn btn-light mt-1" href="{# path('action_new') #}#">Retour au Menu</a>
			<a class="btn btn-light mt-1" href="{{ path('action_new') }}">Nouvelle Action</a>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Descriptif</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for action in actions %}
					<tr>
						<td>{{ action.name }}</td>
						<td>{{ action.text }}</td>
						<td>
							<a class="btn btn-light mt-1" href="{{ path('action_show', {'id': action.id}) }}">Voir</a>
							<a class="btn btn-light mt-1" href="{{ path('action_edit', {'id': action.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
