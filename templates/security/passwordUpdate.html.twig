{% if 'ROLE_ADMIN' in app.user.roles %}
	{% set prefix = "admin/" %}
{% elseif 'ROLE_USER' in app.user.roles  %}
	{% set prefix = "customer/" %}
{% else %}
	{% set prefix = "" %}
{% endif %}

{% extends prefix ~ "base.html.twig" %}

{% block body %}
	<input type="hidden" name="{{ prefix }}">

	{{ form_start(form) }}
	{{ form_end(form) }}

{% endblock %}
