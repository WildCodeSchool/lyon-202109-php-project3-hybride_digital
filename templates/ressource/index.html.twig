{% extends 'base.html.twig' %}

{% block title %}toutes les ressources{% endblock %}

{% block body %}
    <section class='container'>
        <h1>toutes les ressources</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Lien</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ressource in ressources %}
                <tr>
                    <td>{{ ressource.id }}</td>
                    <td>{{ ressource.description }}</td>
                    <td>{{ ressource.link }}</td>
                    <td>
                        <a href="{{ path('ressource_show', {'id': ressource.id}) }}">montrer</a>
                        <a href="{{ path('ressource_edit', {'id': ressource.id}) }}">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">pas de données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('ressource_new') }}">Créer une nouvelle ressource</a>
    </section>
{% endblock %}
